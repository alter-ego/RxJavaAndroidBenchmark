<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/AnswerBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/question_title_margin"
            android:layout_marginBottom="@dimen/question_title_margin"
            android:textSize="@dimen/question_title_size"
            android:gravity="start" />

        <WebView
            android:id="@+id/QuestionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/ShowComments"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_button_comments"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/question_title_margin"
            android:layout_marginBottom="@dimen/question_title_margin"
            android:padding="@dimen/default_padding"
            android:textSize="@dimen/question_buttontext_size" />

        <Button
            android:id="@+id/ShowAnswers"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_button_answers"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/question_title_margin"
            android:padding="@dimen/default_padding"
            android:textSize="@dimen/question_buttontext_size" />
    </LinearLayout>
</ScrollView>